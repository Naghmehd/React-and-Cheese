<div class="container">
  <div>
    <p id="notice"><%= notice %></p>
  </div>

  <% if signed_in? %>
  <h3>Hello <%=link_to current_user.username, user_path(current_user.id) %>!</h3>
  <%end %>

  <h1>List of Cheeses </h1>

<table>
 <thead>
   <tr>
     <th>Name:</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @cheeses.each do |cheese| %>
     <tr>
       <td><%= cheese.name %></td>
       <td><%= link_to 'Show', cheese %></td>
     </tr>
   <% end %>
 </tbody>
</table>

<br>

<%= link_to 'New Cheese', new_cheese_path %>
</div>
