
<div class="container">

    <div class="row">
      <p id="notice"><%= notice %></p>

    <% if signed_in? %>
      <h1>Hello <%=link_to current_user.username, user_path(current_user.id) %>!</h1>
      <%end %>

  <h3>List of Users</h3>
  <table class="table table-striped">
    <thead class="thead-inverse">
      <tr>
        <th>Name</th>
        <th>Likes</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>

          <td><%= link_to 'Show', user %></td>
        </tr>
      <% end %>

    </tbody>
  </table>

<br>

</div>
